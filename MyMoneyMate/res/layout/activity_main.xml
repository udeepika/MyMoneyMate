<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bck_5"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="MyMoneyMate"
        android:textColor="#67204e"
        android:textSize="28dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="400px"
        android:layout_height="145px"
        android:layout_gravity="center"
        android:background="@drawable/textbox"
        android:padding="10px"
        android:text="A smart way to keep track of your personal expenses.\nAdd,view, update and delete your expenses with ease!!!"
        android:textSize="26px" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="fill_parent"
        android:layout_height="60px"
        android:layout_margin="5dp"
        android:background="@drawable/rounded"
        android:text="Add Expense"
        android:textColor="#67204e"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_view"
        android:layout_width="fill_parent"
        android:layout_height="60px"
        android:layout_margin="5dp"
        android:background="@drawable/rounded"
        android:text="View Expenses"
        android:textColor="#67204e"
        android:textSize="22dp"
        android:textStyle="bold" />
    <TextView android:layout_width="match_parent"
    		  android:layout_height="10px" />
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="140px"
            android:layout_height="300px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bag" />

</RelativeLayout>
</LinearLayout>